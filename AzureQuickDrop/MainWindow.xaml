<Window x:Class="AzureQuickDrop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AzureQuickDrop"
        
        mc:Ignorable="d"
        Title="Azure quick drop" 
        
        Topmost="True"
        WindowStyle="None"
        AllowsTransparency="True"
        AllowDrop="True"
        
        Height="200" 
        Width="200"
        Opacity="0.2"
        BorderBrush="Lime"
        BorderThickness="1"
        
        
        MouseDown="Window_MouseDown"
        Drop="root_Drop"
        KeyUp="root_KeyUp"
        
        x:Name="root"
        >
    <Window.Background>
        <SolidColorBrush Color="Lime"/>
    </Window.Background>
    <Grid
        >
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Viewbox Grid.Row="0" Margin="20">
            <TextBlock Text="{Binding ElementName=root,Path=QueueLength,FallbackValue=10}" Foreground="Black"/>
        </Viewbox>
        <!--<TextBlock Text=""-->
        
    </Grid>
</Window>
